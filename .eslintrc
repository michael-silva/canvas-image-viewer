{
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true,
      "jest": true
    },
    "extends": [
      "airbnb-base"
    ],
    "plugins": [
      "babel"
    ],
    "rules": {
      "arrow-parens": ["error", "always"],
      "radix": ["error", "as-needed"],
      "import/prefer-default-export": "off",
      "no-plusplus": "off",
      "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
      "no-underscore-dangle": ["error", { "allowAfterThis": true, "allowAfterSuper": true }]
    }
  }
